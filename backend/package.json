{
  "name": "@kohlabs/terminal-backend",
  "version": "1.0.0",
  "description": "Backend server for koH Labs Terminal Interface with real-time Solana/DeFi integration",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "typecheck": "tsc --noEmit",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "docker:build": "docker build -t kohlabs-terminal-backend .",
    "docker:run": "docker run -p 3001:3001 kohlabs-terminal-backend",
    "clean": "rimraf dist"
  },
  "keywords": [
    "terminal",
    "solana",
    "defi",
    "websocket",
    "blockchain",
    "trading",
    "ai",
    "kohlabs"
  ],
  "author": "koH Labs",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.95.5",
    "@solana/spl-token": "^0.4.8",
    "@jup-ag/core": "^6.0.26",
    "express": "^4.19.2",
    "socket.io": "^4.8.1",
    "ioredis": "^5.4.1",
    "pg": "^8.13.1",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "axios": "^1.7.9",
    "ws": "^8.18.0",
    "uuid": "^11.0.3",
    "dotenv": "^16.4.7",
    "winston": "^3.17.0",
    "node-cron": "^3.0.3",
    "joi": "^17.13.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.3",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/ws": "^8.5.13",
    "@types/uuid": "^10.0.1",
    "@types/pg": "^8.11.12",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "tsc-alias": "^1.8.10",
    "vitest": "^2.1.8",
    "supertest": "^7.0.0",
    "rimraf": "^6.0.1",
    "@vitest/coverage-v8": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kohlabs/terminal-backend.git"
  },
  "bugs": {
    "url": "https://github.com/kohlabs/terminal-backend/issues"
  },
  "homepage": "https://terminal.koh.lol"
}