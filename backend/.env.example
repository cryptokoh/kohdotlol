# koH Labs Terminal Backend Environment Configuration

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://terminal.koh.lol

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/kohlabs_terminal
DATABASE_SSL=false
DATABASE_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# SOLANA BLOCKCHAIN CONFIGURATION
# ============================================================================
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta

# Alternative RPC endpoints for load balancing
SOLANA_RPC_BACKUP_1=https://solana-api.projectserum.com
SOLANA_RPC_BACKUP_2=https://rpc.ankr.com/solana

# Jupiter API Configuration
JUPITER_API_URL=https://quote-api.jup.ag/v6
JUPITER_PRICE_API_URL=https://price.jup.ag/v4

# ============================================================================
# DEFI & MARKET DATA APIs
# ============================================================================
# CoinGecko API for price data
COINGECKO_API_KEY=
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Birdeye API for advanced market data
BIRDEYE_API_KEY=
BIRDEYE_API_URL=https://public-api.birdeye.so

# DexScreener API for DEX data
DEXSCREENER_API_URL=https://api.dexscreener.com/latest

# CoinMarketCap (alternative)
CMC_API_KEY=
CMC_API_URL=https://pro-api.coinmarketcap.com/v2

# ============================================================================
# AI SERVICES CONFIGURATION
# ============================================================================
# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# AI Rate Limits
AI_REQUESTS_PER_MINUTE=30
AI_REQUESTS_PER_HOUR=500

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret-change-this-in-production
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL=false

# CORS Settings
CORS_CREDENTIALS=true

# ============================================================================
# WEBSOCKET CONFIGURATION
# ============================================================================
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
WS_MAX_CONNECTIONS_PER_IP=10
WS_CONNECTION_TIMEOUT=30000

# WebSocket Rate Limits
WS_COMMANDS_PER_SECOND=20
WS_SUBSCRIPTIONS_PER_USER=50
WS_MAX_IDLE_TIME=1800000

# ============================================================================
# DATA STREAMING & CACHING
# ============================================================================
# Cache TTL (Time To Live) in seconds
PRICE_CACHE_TTL=30
TOKEN_INFO_CACHE_TTL=300
MARKET_DATA_CACHE_TTL=60
USER_DATA_CACHE_TTL=600

# Streaming Configuration
PRICE_STREAM_INTERVAL=1000
MARKET_STREAM_INTERVAL=5000
TOKEN_STREAM_INTERVAL=2000

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ============================================================================
# SOCIAL SENTIMENT ANALYSIS
# ============================================================================
# Twitter API (for sentiment analysis)
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=

# Reddit API (for community sentiment)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=kohlabs-terminal/1.0

# Telegram Bot (for community integration)
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================
# Magic Eden API (NFT data)
MAGICEDEN_API_URL=https://api-mainnet.magiceden.dev/v2

# Metaplex API (NFT metadata)
METAPLEX_API_URL=https://metadata.metaplex.com

# Phantom Wallet Integration
PHANTOM_APP_ID=
PHANTOM_REDIRECT_URL=

# Backpack Wallet Integration
BACKPACK_APP_ID=
BACKPACK_REDIRECT_URL=

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================
# Test Database
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/kohlabs_terminal_test

# Mock Services (for testing)
MOCK_SOLANA_RPC=false
MOCK_AI_SERVICES=false
MOCK_PRICE_FEEDS=false

# Development Features
DEV_CORS_ALL_ORIGINS=false
DEV_DETAILED_ERRORS=true
DEV_SQL_LOGGING=false

# ============================================================================
# PRODUCTION OPTIMIZATIONS
# ============================================================================
# Compression
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Connection Pooling
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Memory Management
NODE_OPTIONS=--max-old-space-size=2048

# Clustering
CLUSTER_WORKERS=0
CLUSTER_ENABLED=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_DANGEROUS_MODE=true
FEATURE_AI_PREDICTIONS=true
FEATURE_SOCIAL_SENTIMENT=true
FEATURE_NFT_INTEGRATION=false
FEATURE_CROSS_CHAIN=false
FEATURE_ADVANCED_ANALYTICS=true

# ============================================================================
# BACKUP & RECOVERY
# ============================================================================
BACKUP_ENABLED=false
BACKUP_INTERVAL=3600000
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=us-east-1

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE="0 2 * * *"
DB_BACKUP_LOCATION=/var/backups/kohlabs

# ============================================================================
# ANALYTICS & TRACKING
# ============================================================================
ANALYTICS_ENABLED=true
MIXPANEL_TOKEN=
GOOGLE_ANALYTICS_ID=

# User Behavior Tracking
TRACK_COMMANDS=true
TRACK_SUBSCRIPTIONS=true
TRACK_AI_INTERACTIONS=true
TRACK_ERRORS=true

# ============================================================================
# COMPLIANCE & LEGAL
# ============================================================================
TERMS_OF_SERVICE_URL=https://koh.lol/terms
PRIVACY_POLICY_URL=https://koh.lol/privacy
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true

# Data Retention
USER_DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=90
ANALYTICS_RETENTION_DAYS=730